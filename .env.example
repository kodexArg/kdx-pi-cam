# kdx-pi-cam - Environment Variables
# Copy this file to .env and configure the variables

# RTSP stream URL (required)
# Example: rtsp://user:pass@192.168.1.100:554/stream
RTSP_URL=

# Telegram bot token from @BotFather (required)
# Example: 1234567890:ABC123def456ghi789jkl012mno345pqr678
BOT_TOKEN=

# Telegram chat ID for notifications (required)
# Example: 123456789
CHAT_ID=

# Motion detection threshold (pixel difference, default 30)
MOTION_THRESHOLD=30

# Motion sensitivity (0.0 to 1.0, default 0.5)
# Controls overall motion detection sensitivity
MOTION_SENSITIVITY=0.5

# Minimum area for motion detection (pixels, default 1000)
# Minimum contour area to consider as motion
MOTION_MIN_AREA=1000

# Cache directory path (default ./cache)
CACHE_DIR=./cache

# Maximum cache size in MB (default 500)
CACHE_MAX_SIZE_MB=500

# Enable cache compression (true/false, default true)
CACHE_COMPRESSION_ENABLED=true

# Cache cleanup interval in seconds (default 3600)
CACHE_CLEANUP_INTERVAL=3600

# Storage backend (local, s3, azure, gcp, currently only local is supported)
STORAGE_BACKEND=local

# Video buffer duration in seconds (default 30)
VIDEO_BUFFER_SECONDS=30

# Maximum video clip duration in seconds (default 60)
VIDEO_MAX_DURATION=60

# Video quality (low, medium, high, default medium)
VIDEO_QUALITY=medium

# Notification cooldown in seconds (default 300)
NOTIFICATION_COOLDOWN_SECONDS=300

# Quiet hours start time (24-hour format, default 22)
NOTIFICATION_QUIET_HOURS_START=22

# Quiet hours end time (24-hour format, default 7)
NOTIFICATION_QUIET_HOURS_END=7

# Logging level (DEBUG, INFO, WARNING, ERROR, default INFO)
LOG_LEVEL=INFO

# Enable logging to file (true/false, default true)
LOG_TO_FILE=true

# Log file path (default ./cache/logs/kdx-pi-cam.log)
LOG_FILE_PATH=./cache/logs/kdx-pi-cam.log

# Enable log rotation (true/false, default true)
LOG_ROTATION_ENABLED=true

# Maximum log file size in MB (default 10)
LOG_MAX_FILE_SIZE_MB=10

# Number of log backup files to keep (default 7)
LOG_BACKUP_COUNT=7